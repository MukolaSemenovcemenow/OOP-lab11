<Window x:Class="CityDirectory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="City Directory" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Button Content="Add Enterprise" Click="AddEnterprise_Click" Margin="5"/>
            <Button Content="View All" Click="ViewAll_Click" Margin="5"/>
        </StackPanel>
        <ListBox x:Name="EnterpriseListBox" Grid.Row="1" Margin="10"/>
    </Grid>
</Window>
